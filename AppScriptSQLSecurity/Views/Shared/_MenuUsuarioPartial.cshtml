@if (Context.User.Identity.IsAuthenticated == false)
{
        <li class="nav-item">
            <a asp-controller="Timers"
           asp-action="Index"
           class="nav-link">
                Log In
            </a>
        </li>
}
else
{
        <li class="nav-item">
            <a asp-controller="Manage"
           asp-action="LogOut"
           class="nav-link text-danger">
                Log Out 
                <span style="color:blue">
                @Context.User.Identity.Name
                </span>
            </a>
        </li>
}
