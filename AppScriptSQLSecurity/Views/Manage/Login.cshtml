<h1>Log In usuarios</h1>

<form method="post">
    <label>Usuario: </label>
    <input type="text" name="username"
           class="form-control" />
    <br />
    <label>Password: </label>
    <input type="password" name="password"
           class="form-control" />
    <br />
    <button type="submit" class="btn btn-info">
        Log In
    </button>
</form>
<h1 style="color:red">
    @ViewData["MENSAJE"]
</h1>
